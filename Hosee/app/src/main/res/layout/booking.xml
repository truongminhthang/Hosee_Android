<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:background="@color/backgroundHeader"
                                                   android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="200dp" android:layout_height="200dp"
                                                  android:src="@drawable/maxresdefault"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  android:layout_marginTop="70dp"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  app:layout_constraintHorizontal_bias="0.497"
                                                  app:civ_border_color="@color/backgroundBooking"
                                                  app:civ_border_width="15dp"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  android:layout_marginBottom="40dp"
                                                  app:layout_constraintBottom_toTopOf="@+id/textView3"
                                                  app:layout_constraintVertical_bias="0.658"
                                                  android:id="@+id/circleImageView2"/>
    <TextView
            android:text="@string/c_gi_o_th_o"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="30sp" app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:gravity="center" android:textAllCaps="true" android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView2"
            app:layout_constraintBottom_toTopOf="@+id/textView4"/>
    <TextView
            android:text="@string/_0969696969"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textSize="20sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" android:gravity="center" android:textColor="@color/white"
            android:textAllCaps="false"/>
    <TextView
            android:text="@string/ho_n_th_nh_d_ch_v"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:textSize="24sp" app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="@+id/textView7"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:gravity="center" android:textColor="@color/white" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView7" app:layout_constraintVertical_bias="0.428"
    />
    <TextView
            android:text="@string/_500_000_vn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:textSize="30sp"
            android:textColor="@color/xanh" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center" android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="36dp" app:layout_constraintBottom_toTopOf="@+id/ratingBar"/>
    <Button
            android:text="@string/ng"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.491" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="24sp" android:textAllCaps="false" android:fontFamily="sans-serif"
            android:textColor="@color/white" android:background="@color/backgroundNav"
            android:layout_marginBottom="16dp"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar" app:layout_constraintStart_toStartOf="@+id/button"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="@+id/button"
            android:layout_marginBottom="60dp" app:layout_constraintBottom_toTopOf="@+id/button"
    />

</androidx.constraintlayout.widget.ConstraintLayout>